<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44aa00"

        >

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="商品缺货查询"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8866ff00"

        >

        <multyunits.wochu.com.multyunits.wiget.DatePickWiget

            android:layout_marginTop="12dp"

            android:layout_marginLeft="5dp"
            android:id="@+id/ll_date_choose"
            android:layout_width="wrap_content"

            android:layout_height="38dp"

            ></multyunits.wochu.com.multyunits.wiget.DatePickWiget>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/et_batch"

            android:layout_width="55dp"
            android:hint="波次"
            android:layout_height="38dp"
            android:textSize="16sp"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:singleLine="true" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/et_goodsCode"

            android:layout_width="110dp"
            android:hint="商品条码"
            android:layout_height="38dp"
            android:textSize="16sp"
            android:singleLine="true"

            />

        <Button
            android:id="@+id/qurry_count"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"


            android:text="查询" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="#dddddd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称:"
                android:textColor="#222222"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="#222222"
                android:textSize="18sp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#666666"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品条码:"
                android:textColor="#222222"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_goodsCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="#222222"
                android:textSize="18sp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#666666"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划数量:"
                android:textColor="#222222"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_goodsQTY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="#222222"
                android:textSize="18sp"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#666666"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实检数量:"
                android:textColor="#222222"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_goodsPQTY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="#222222"
                android:textSize="18sp"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#666666"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未检数量:"
                android:textColor="#222222"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_lackQTY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="#E8395C"
                android:textSize="18sp"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#666666"


            />
    </LinearLayout>

</LinearLayout>
